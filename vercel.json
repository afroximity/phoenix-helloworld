{
  "version": 2,
  "builds": [
    {
      "src": "mix.exs",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_build/prod"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/priv/static/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MIX_ENV": "prod",
    "SECRET_KEY_BASE": "@secret_key_base"
  }
}
